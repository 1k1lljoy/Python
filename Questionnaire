def clinic():
    score=0
    print "Welcome to the Dark Souls Questionaire! Answer the questions!"
    print "Who is King Vendrick's son? A. Knight Solaire B. Amygadala C. ???"
    answer = raw_input("Answer:")
    if answer == "A" or answer == "a":
	score = score + 1
	print "Your score is now"
	print score
        print "Good! Very good!"
    elif answer == "B" or answer == "C" or answer == "b" or answer == "c":
        print "*tsk*,*tsk*,*tsk*"
    else:
        print "You didn't type anything! Try again."

        clinic()

clinic()
